{
  "version": "0.0.0",
  "dev": {
    "debug": false,
    "open": true,
    "port": null,
    "watch": {
      "paths": [
        "src",
        "package.json",
        "nrg.config.js",
        "nrg.config.js",
        "nrg.config.cjs",
        ".nrgrc.json",
        ".nrgrc.js",
        ".nrgrc.cjs",
        ".nrgrc.js",
        ".config/nrgrc",
        ".config/nrgrc.json",
        ".config/nrgrc.js",
        ".config/nrgrc.cjs",
        ".config/nrgrc.js"
      ]
    }
  },
  "build": {
    "server": {
      "bundle": true,
      "platform": "node",
      "format": "cjs",
      "minify": false,
      "keepNames": true,
      "sourcemap": true
    },
    "client": {
      "bundle": true,
      "format": "iife",
      "platform": "browser",
      "target": ["es2020"],
      "keepNames": true,
      "minify": true,
      "sourcemap": "inline",
      "allowOverwrite": true
    }
  },
  "nodeRed": {
    "flowFile": "flows.json",
    "flowFilePretty": true,
    "uiPort": 1880,
    "diagnostics": {
      "enabled": true,
      "ui": true
    },
    "runtimeState": {
      "enabled": false,
      "ui": false
    },
    "logging": {
      "console": {
        "level": "info",
        "metrics": false,
        "audit": false
      }
    },
    "exportGlobalContextKeys": false,
    "externalModules": {},
    "editorTheme": {
      "palette": {},
      "projects": {
        "enabled": false,
        "workflow": {
          "mode": "manual"
        }
      },
      "codeEditor": {
        "lib": "monaco",
        "options": {}
      },
      "markdownEditor": {
        "mermaid": {
          "enabled": true
        }
      },
      "multiplayer": {
        "enabled": false
      }
    },
    "functionExternalModules": true,
    "functionTimeout": 0,
    "functionGlobalContext": {},
    "debugMaxLength": 1000,
    "mqttReconnectTime": 15000,
    "serialReconnectTime": 15000
  }
}
