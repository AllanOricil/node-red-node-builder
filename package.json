{
  "name": "@allanoricil/nrg-core",
  "version": "0.0.0-beta.21",
  "description": "This package can be used to build Node-RED nodes made with the nrg cli.",
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./types": "./dist/index.d.ts"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "release": "semantic-release",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint '**/*.ts'",
    "lint:fix": "eslint --fix '**/*.ts'",
    "format": "prettier '**/*.{json,ts}'",
    "format:fix": "prettier --write '**/*.{json,ts}'",
    "prepare": "husky",
    "prepublishOnly": "npm run build"
  },
  "author": "allanoricil <allanoricilcos@outlook.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@allanoricil/node-red-node": "0.0.0-beta.14",
    "node-red": "4.0.2"
  },
  "dependencies": {
    "@csstools/postcss-sass": "^5.1.1",
    "autoprefixer": "^10.4.20",
    "cheerio": "^1.0.0",
    "cssnano": "^7.0.6",
    "deepmerge": "^4.3.1",
    "detect-port": "^1.6.1",
    "esbuild": "^0.21.4",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "handlebars": "^4.7.8",
    "html-minifier": "^4.0.0",
    "kill-port": "^2.0.1",
    "lilconfig": "^3.1.2",
    "oclif": "^4.14.29",
    "open": "^10.1.0",
    "pkg-dir": "^8.0.0",
    "postcss": "^8.4.45",
    "postcss-prefix-selector": "^1.16.1",
    "postcss-scss": "^4.0.9",
    "winston": "^3.14.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.9.1",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/detect-port": "^1.3.5",
    "@types/eslint__js": "^8.42.3",
    "@types/fs-extra": "^11.0.4",
    "@types/html-minifier": "^4.0.5",
    "@types/kill-port": "^2.0.3",
    "@types/node": "^22.5.2",
    "@types/postcss-prefix-selector": "^1.16.3",
    "@types/source-map": "^0.5.2",
    "@types/winston": "^2.4.4",
    "@vitest/coverage-v8": "^2.0.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.9.0",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.0",
    "node-red": "^4.0.2",
    "prettier": "^3.3.3",
    "rollup": "^4.21.2",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-exclude-dependencies-from-bundle": "^1.1.23",
    "rollup-plugin-typescript2": "^0.36.0",
    "semantic-release": "^23.1.1",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.4.0",
    "vitest": "^2.0.5"
  },
  "lint-staged": {
    "*.{ts, json}": [
      "prettier --write"
    ],
    "*.ts": [
      "eslint --fix"
    ]
  }
}
